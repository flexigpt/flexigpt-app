{
	"name": "frontend",
	"version": "1.0.0",
	"description": "Frontend for FlexiGPT",
	"type": "module",
	"private": true,
	"scripts": {
		"typecheck": "react-router typegen && tsc",
		"lint:knip": "knip --tags=-lintignore",
		"lint:eslint": "eslint . -c ./eslint.config.mjs",
		"lint:eslintinfo": "eslint --env-info",
		"lint": "pnpm run typecheck && pnpm run lint:eslint && pnpm run lint:knip",
		"lint:fix": "eslint . -c ./eslint.config.mjs --fix .",
		"fmt": "prettier -c . --ignore-path ../.prettierignore",
		"fmt:fix": "prettier -w . --ignore-path ../.prettierignore",
		"clean": "rimraf ./dist",
		"run:wailsdev": "cp .env.dev .env && cross-env VITE_PLATFORM=wails react-router dev",
		"build:pre": "node -e \"const fs=require('fs'); if(fs.existsSync('.env.prod')) fs.copyFileSync('.env.prod','.env');\" && pnpm run typecheck",
		"build:wails": "rimraf ./dist && pnpm run build:pre && pnpm run typecheck && cross-env VITE_PLATFORM=wails react-router build",
		"test": "vitest run",
		"coverage": "vitest run --coverage",
		"licenses:gen": "pnpm run build:pre && cross-env GEN_LICENSES=true VITE_PLATFORM=wails vite build --mode production"
	},
	"keywords": [],
	"author": "ppipada",
	"dependencies": {
		"@ariakit/react": "^0.4.21",
		"@emoji-mart/data": "^1.2.1",
		"@fontsource-variable/inter": "^5.2.8",
		"@platejs/autoformat": "^52.0.11",
		"@platejs/basic-nodes": "^52.0.11",
		"@platejs/basic-styles": "^52.0.11",
		"@platejs/combobox": "^52.0.15",
		"@platejs/emoji": "^52.0.15",
		"@platejs/floating": "^52.0.11",
		"@platejs/indent": "^52.0.11",
		"@platejs/list": "^52.0.11",
		"@platejs/tabbable": "^52.0.11",
		"@react-router/node": "^7.13.1",
		"@udecode/cn": "^52.0.11",
		"class-variance-authority": "^0.7.1",
		"compromise": "^14.14.5",
		"isbot": "^5.1.35",
		"katex": "^0.16.33",
		"mermaid": "^11.12.3",
		"platejs": "^52.0.17",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"react-router": "^7.13.1",
		"rehype-katex": "^7.0.1",
		"rehype-raw": "^7.0.0",
		"rehype-sanitize": "^6.0.0",
		"remark-gemoji": "^8.0.0",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"remark-supersub": "^1.0.0",
		"shiki": "^3.22.0",
		"sprintf-js": "^1.1.3",
		"stopword": "^3.1.5",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.3",
		"@react-router/dev": "^7.13.1",
		"@tailwindcss/node": "^4.2.1",
		"@tailwindcss/vite": "^4.2.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@trivago/prettier-plugin-sort-imports": "^6.0.2",
		"@types/node": "22.19.1",
		"@types/react": "19.2.14",
		"@types/react-dom": "19.2.3",
		"@types/sprintf-js": "^1.1.4",
		"@types/stopword": "^2.0.3",
		"@vitejs/plugin-rsc": "^0.5.20",
		"@vitest/coverage-v8": "^4.0.18",
		"cross-env": "^10.1.0",
		"daisyui": "^5.5.19",
		"eslint": "^9.39.3",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-tailwind-canonical-classes": "^1.2.0",
		"eslint-plugin-tailwindcss": "4.0.0-beta.0",
		"globals": "^17.3.0",
		"jiti": "^2.6.1",
		"jsdom": "^28.1.0",
		"knip": "^5.85.0",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"rimraf": "^6.1.3",
		"rollup-plugin-license": "^3.7.0",
		"rollup-plugin-visualizer": "^7.0.0",
		"tailwindcss": "^4.2.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.1",
		"vite": "^7.3.1",
		"vite-plugin-checker": "^0.12.0",
		"vite-tsconfig-paths": "^6.1.1",
		"vitest": "^4.0.18"
	},
	"knip": {
		"entry": [
			"vite.config.{js,cjs,mjs,ts}",
			"react-router.config.{js,cjs,mjs,ts}",
			"app/hooks/highlight_worker.ts"
		],
		"ignore": [
			"app/apis/wailsjs/runtime/runtime.js",
			"app/apis/wailsjs/go/main/ProviderSetWrapper.js",
			"app/apis/wailsjs/go/main/SkillStoreWrapper.js",
			"app/lib/logger.ts",
			"app/components/editor/plugins/auto_format_kit.tsx"
		],
		"ignoreBinaries": [],
		"ignoreDependencies": [
			"@testing-library/react",
			"@testing-library/user-event",
			"eslint-plugin-tailwindcss",
			"@tailwindcss/node",
			"@platejs/autoformat"
		]
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"plugins": [
			"@trivago/prettier-plugin-sort-imports",
			"prettier-plugin-tailwindcss"
		],
		"importOrder": [
			"^react$",
			"^react-dom$",
			"^react-icons/(.*)$",
			"<THIRD_PARTY_MODULES>",
			"^@/spec/(.*)$",
			"^@/lib/(.*)$",
			"^@/hooks/(.*)$",
			"^@/apis/(.*)$",
			"^@/components/(.*)$",
			"^@/(.*)$",
			"^[./]"
		],
		"importOrderSeparation": true,
		"importOrderSortSpecifiers": true,
		"importOrderCaseInsensitive": true
	}
}
